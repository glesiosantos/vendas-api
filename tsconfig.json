{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": [
        "src/config/"
      ],
      "@modules/*": [
        "src/modules"
      ],
      "@shared/*": [
        "src/shared/"
      ],
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
}